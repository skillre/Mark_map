{
  "version": 2,
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/output/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*\\.(html|svg|json))", "dest": "/$1" },
    { "src": "/api-docs", "dest": "/public/api-docs.html" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "API_KEYS": "default-dev-key,vercel-prod-key"
  },
  "buildCommand": "npm run build"
} 