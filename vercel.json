{
  "version": 2,
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/output/(.*)", "dest": "/api/output/$1" },
    { "src": "/(.*\\.html)", "dest": "/$1" },
    { "src": "/api-docs", "dest": "/public/api-docs.html" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ],
  "buildCommand": "npm run build"
} 